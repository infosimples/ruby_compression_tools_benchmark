# frozen_string_literal: true

source "https://rubygems.org"

git_source(:github) {|repo_name| "https://github.com/#{repo_name}" }

ruby '2.5.1'

# Ruby bindings for lz4 made in C
gem 'lz4-ruby'

# Ruby bindings for bzip2 made in C
gem 'bzip2-ruby', git: 'https://github.com/chewi/bzip2-ruby.git'

# Ruby bindings for Zstandard made in C
gem 'zstd-ruby'

# Ruby bindings for snappy made in C
gem 'snappy'

# Ruby bindings for brotli made in C
gem 'brotli'
